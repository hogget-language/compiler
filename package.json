{
  "name": "hogget",
  "version": "0.1.0-dev",
  "description": "Compiler, linter and formatter for the Hogget programming language",
  "homepage": "https://hogget.org/",
  "repository": "github:hogget-language/compiler",
  "main": "index.js",
  "bin": {
    "hgg": "./cli.js"
  },
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "node -e \"require('./test').run('src', '.test.js')\"",
    "test:integration": "node -e \"require('./test').run('test', '.js')\""
  },
  "keywords": [
    "hgg",
    "hogget",
    "programming-language",
    "functional-programming"
  ],
  "author": "Bran van der Meer",
  "license": "ISC",
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
